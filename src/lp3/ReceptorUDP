import java.net.DatagramPacket;
import java.net.DatagramSocket;

import javax.swing.JOptionPane;

public class ReceptorUDP {
    public static void main(String[] args) {
        if(args.length != 1)
        {
            System.out.println("Informe a porta a ser ouvida");
            System.exit(0);
        }
        try {
            //converte arg recebido para inteiro
            int port = Integer.parseInt(args[0]);

            //Cria o DatagramSockets para aguardar mensagens ate o recebimento da mensagem
            DatagramSocket ds = new DatagramSocket(port);

            //Prepara o buffer para receber a msg
            byte[] msg = new byte[256];

            //Prepara o pkg de dados
            DatagramPacket pkg = new DatagramPacket(msg, msg.length);

            //Recebimento da mensagem
            ds.receive(pkg);

            JOptionPane.showMessageDialog(null, new String(pkg.getData()).trim(), "Mensagem recebida", 1); 

        } catch (Exception e) {
            // TODO: handle exception
        }
    }
}
